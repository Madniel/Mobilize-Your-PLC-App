<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilizeyourplc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobilizeYourPLC"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".statistic4"
            android:exported="false"
            android:label="@string/title_activity_statistic4"
            android:theme="@style/Theme.MobilizeYourPLC.NoActionBar" />
        <activity
            android:name=".statistic3"
            android:exported="false"
            android:label="@string/title_activity_statistic3"
            android:theme="@style/Theme.MobilizeYourPLC.NoActionBar" />
        <activity
            android:name=".statistic2"
            android:exported="false"
            android:label="@string/title_activity_statistic2"
            android:theme="@style/Theme.MobilizeYourPLC.NoActionBar" />
        <activity
            android:name=".MainActivity3"
            android:exported="false"
            android:label="@string/title_activity_main3"
            android:theme="@style/Theme.MobilizeYourPLC.NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/load_down_anim" />

        <activity
            android:name=".StatisticModule"
            android:exported="false" />
        <activity
            android:name=".AlarmModule"
            android:exported="false" />
        <activity
            android:name=".ControlModule"
            android:exported="false" />
        <activity
            android:name=".MainActivity2"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>